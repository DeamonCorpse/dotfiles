#---------- PACKAGE MANAGERS
# Using snap
alias snap='sudo snap'

#----- APT (Debian-based)
# Update package list
alias update='sudo apt update'

# Upgrade packages
alias upgrade='sudo apt upgrade -y'

# Update & Upgrade
alias u2='sudo apt update && sudo apt upgrade -y'

# Install package
alias install='sudo apt install'

# Remove package
alias remove='sudo apt remove'

# Search
alias search='sudo apt search'


