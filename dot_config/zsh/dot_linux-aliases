# List installed packages
#alias installed='sudo pacman -Q'


#---------- PROGRAMS
#----- BAT
alias bcat='bat --paging=never'

#----- CMATRIX
# Run cmatrix
alias cmatrixl='cmatrix -lba'


#----- UFW
# Run UFW as admin
alias ufw='sudo ufw'
